/* pages/my/my.wxss */
page{
  background-color: #f7f7f7;
}
.cardSection{
  /* padding-top: 40rpx; */
  position: relative;
}
.cardBg{
  width: 750rpx;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.userToolsTitle{
  margin-top: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding-left: 40rpx;
  border-bottom: 1rpx solid #f4f4f4;
  font-weight: 700;
}
.userTools{
  height: 160rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userTools:last-child{
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 3rpx 6rpx 6rpx #f1f1f1;
}
.userToolsItem{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}
.userToolsItem view{
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #444;
}
.userToolsItem .imgBox{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.personItem{
  background-color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
}