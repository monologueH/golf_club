/* miniprogram/pages/memberDetails/memberDetails.wxss */
page{
  background-color: #fff;
}
.top{
  position: relative;
  height: 620rpx;
}
.header{
  background-color: rgba(19, 18, 18, 0.952);
  width: 100%;
  height: 300rpx;
}
.header image{
  width: 100%;
  height: 300rpx;
}
.info{
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
  /* height: 340rpx;
  .top */
  position: absolute;
  top:250rpx ;
  left: 0;
}
.card{
  width: 100%;
  text-align: center;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 2rpx 4rpx 4rpx 0rpx #f1f1f1;
  text-align: center;
  height: 300rpx;
  /* position: relative; */

}
.avatar{
  /* width: 140rpx;
  height: 140rpx; */
  border-radius: 50%;
  border:6rpx solid #fff;
  background: #fff;
  position: absolute;
  left: 50%;
  top:-85rpx;
  margin-left: -68rpx;

}
.avatar image{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;

}
.nameList{
  box-sizing: border-box;
  padding-top: 180rpx;
  font-size:44rpx;
  font-weight: 700;

}
.details{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  padding-top: 0;
}
.person{
  text-align: left;
  font-weight: 700;
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.col{
  width: 100%;
  /* height: 100rpx; */
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
  /* line-height: 100rpx; */
  padding:30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.col text{
  font-weight: 600;
  color: #000;
text-align: left;
}
.col view{
  display: inline-block;
  width: 50%;
  text-align: right;
  word-wrap: break-word;
  color: rgba(51, 51, 51, 0.836);
}