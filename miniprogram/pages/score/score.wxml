      <view>沙地</view>
      <view>球道</view>
    </view> -->
    <picker-view class="locationSel" indicator-class="pickerIndicator" value="{{scoreInfo}}" bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{shots}}" class="shotsSelItem">
          {{item.namecn}}
          <text> {{item.value}}</text>
        </view>
      </picker-view-column>
