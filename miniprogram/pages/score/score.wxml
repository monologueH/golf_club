      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{penalty}}" class="locationSelItem">{{item.value}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{placeFeature}}" class="locationSelItem">{{item.value}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{lanes}}" class="locationSelItem lane">
          <image src="{{item.iconUrl}}"></image>
        </view>
      </picker-view-column> -->
